<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    android:layout_margin="@dimen/collection_item_default_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/collection_item_default_padding">

        <ImageView
            android:id="@+id/collection_item_collection_main_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/collection_item_collection_image_size" />

        <TextView
            android:id="@+id/collection_item_collection_main_image_badge"
            android:layout_width="@dimen/collection_item_collection_badge_size"
            android:layout_height="@dimen/collection_item_collection_badge_size"
            android:layout_alignBottom="@+id/collection_item_collection_main_image"
            android:layout_margin="@dimen/collection_item_inner_default_margin"
            android:background="@drawable/collection_item_collection_badge_shape"
            android:gravity="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/collection_item_collection_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collection_item_collection_main_image"
            android:layout_marginTop="@dimen/collection_item_inner_default_margin"
            android:background="@drawable/collection_item_collection_banner_shape"
            android:padding="@dimen/collection_item_inner_default_margin"
            android:text="@string/collection_item_collection_main_image_banner_text"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/collection_item_collection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collection_item_collection_banner"
            android:layout_marginTop="@dimen/collection_item_inner_default_margin"
            android:textColor="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/collection_item_collection_title"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/collection_item_inner_default_margin"
                android:layout_weight="1"
                android:background="@drawable/collection_item_collection_button_copy_shape"
                android:text="@string/collection_item_collection_button_copy_shop"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_light" />

            <Button
                style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/collection_item_inner_default_margin"
                android:layout_weight="1"
                android:background="@drawable/collection_item_collection_button_share_shape"
                android:text="@string/collection_item_collection_button_share"
                android:textAllCaps="true"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>

