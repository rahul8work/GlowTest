<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/collection_item_default_padding">

    <TextView
        android:id="@+id/collection_item_header_right_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/collection_item_header_right_text"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/collection_item_header_main_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/collection_item_header_right_textview"
        android:layout_toStartOf="@+id/collection_item_header_right_textview"
        android:textSize="@dimen/collection_item_header_right_text_size"
        android:textStyle="bold"
        android:text="@string/collection_item_header_main_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/collection_item_header_filter_size"
        android:orientation="horizontal"
        android:layout_below="@+id/collection_item_header_main_textview"
        android:weightSum="3">

        <TextView
            android:id="@+id/collection_item_header_filter_latest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/collection_item_header_filter_selector"
            android:layout_margin="@dimen/collection_item_default_margin"
            android:gravity="center" />
        <TextView
            android:id="@+id/collection_item_header_filter_lowest"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/collection_item_header_filter_selector"
            android:layout_margin="@dimen/collection_item_default_margin"
            android:gravity="center"/>
        <TextView
            android:id="@+id/collection_item_header_filter_best"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/collection_item_header_filter_selector"
            android:layout_margin="@dimen/collection_item_default_margin"
            android:gravity="center"/>
    </LinearLayout>


</RelativeLayout>